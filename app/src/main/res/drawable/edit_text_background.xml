<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Custom background drawable for EditText components
    Creates a modern, material-style input field with:
    - Subtle background color
    - Rounded corners
    - Light border
    - Consistent padding
    
    Used in conjunction with TextInputLayout for form inputs
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light background color for better contrast -->
    <solid android:color="@color/input_background" />
    
    <!-- Rounded corners for modern look -->
    <corners android:radius="12dp" />
    
    <!-- Subtle border for visual definition -->
    <stroke android:width="1dp" android:color="@color/input_stroke" />
    
    <!-- Consistent padding for text alignment and touch targets -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp" />
</shape>